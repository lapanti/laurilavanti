---
import type { CurriculumVitae } from '../../../types/contentful'

import { sizes, typographics } from '../../../lib/styles'
import H2 from '../../H2.astro'
import UL from '../../UL.astro'
import Row from './section/Row.astro'

interface Props {
    title:
        | CurriculumVitae['fields']['fiduciariesTitle']
        | CurriculumVitae['fields']['degreesTitle']
        | CurriculumVitae['fields']['jobExperiencesTitle']
    items:
        | CurriculumVitae['fields']['fiduciaries']
        | CurriculumVitae['fields']['degrees']
        | CurriculumVitae['fields']['jobExperiences']
}

const { title, items } = Astro.props
---

<style
    define:vars={{
        bodyFontSize: typographics.body.fontSize,
        bodyFontWeight: typographics.body.fontWeight,
        bodyLineHeight: typographics.body.lineHeight,
        sizes1: sizes[1],
    }}
>
    div {
        font-family: var(--ibmPlexSans);
        font-weight: var(--bodyFontWeight);
        font-size: var(--bodyFontSize);
        line-height: var(--bodyLineHeight);
        margin-bottom: var(--sizes1);
        margin-top: var(--sizes1);
    }
</style>

<H2>{title}</H2>
<div>
    <UL>
        {items?.filter((f) => f !== undefined).map(({ fields }) => <Row {...fields} />)}
    </UL>
</div>
