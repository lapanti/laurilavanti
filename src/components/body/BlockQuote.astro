---
import { colors, sizes, typographics } from '../../lib/styles'
---

<style
    define:vars={{
        blockQuoteFontFamily: typographics.blockQuote.fontFamily,
        blockQuoteFontSize: typographics.blockQuote.fontSize,
        blockQuoteFontStyle: typographics.blockQuote.fontStyle,
        blockQuoteFontWeight: typographics.blockQuote.fontWeight,
        blockQuoteLineHeight: typographics.blockQuote.lineHeight,
        colorsSand: colors.sand,
        sizes05: sizes[0.5],
    }}
>
    blockquote {
        font-family: var(--blockQuoteFontFamily);
        font-style: var(--blockQuoteFontStyle);
        font-size: var(--blockQuoteFontSize);
        font-weight: var(--blockQuoteFontWeight);
        line-height: var(--blockQuoteLineHeight);
        border-left-color: var(--colorsSand);
        border-left-width: var(--sizes05);
        grid-column-start: 3;
        padding-bottom: var(--sizes05);
        padding-left: var(--sizes05);
        padding-top: var(--sizes05);
    }
</style>
<blockquote>
    <slot />
</blockquote>
