---
import { colors, sizes } from '../lib/styles'

interface Props {
    ariaLabel?: string
    href: string
    rel?: string
}

const { ariaLabel, href, rel } = Astro.props
---

<style define:vars={{ colorsMoss: colors.moss, sizes0125: sizes[0.125] }}>
    a {
        color: var(--colorsMoss);
        text-decoration: underline;
        text-decoration-thickness: var(--sizes0125);
    }
</style>
<a
    aria-label={ariaLabel ? `${ariaLabel} (linkki aukeaa uudessa välilehdessä)` : null}
    href={href}
    rel={`${rel ? rel : ''} noopener noreferrer`}
    target="_blank"
>
    <slot />
</a>
