---
import { contentfulClient } from '../lib/contentful'
import { colors, HEADER_SIZE, zIndices } from '../lib/styles'
import DesktopMenu from './header/DesktopMenu.astro'
import type { TypeMainNav } from '../types/contentful'

/** Only one main nav there */
const mainNav = await contentfulClient.getEntry<TypeMainNav>('7EKHWYCNVfmLLfc5TuKo9A')

    const links = mainNav.fields.links.filter((link) => link.fields.slug !== 'index')
---

        <header style={{
boxSizing: 'border-box',
        display: 'flex',
        flexDirection: 'row',
        height: HEADER_SIZE,
        userSelect: 'none',
        width: '100%',
        zIndex: zIndices[50],
        background:
                      'linear-gradient(90deg,rgba(0, 0, 0, 0.3) 0%, rgba(0, 0, 0, 0.15) 25%, rgba(255, 255, 255, 0) 50%, rgba(255, 255, 255, 0) 100%)',
                  backgroundColor: colors.evening,
                  boxShadow: 'hsla(0 0% 0% / 0.1) 0 0.5rem 1rem',
                  position: 'fixed',
        }}>
        <DesktopMenu links={links} />
        </header>
