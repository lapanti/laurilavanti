---
import { Picture } from 'astro:assets' /* eslint-disable-line import/no-unresolved */

import { colors, sizes, HEADER_SIZE, CONTENT_PADDING, typographics } from '../lib/styles'

const { title, heroImage } = Astro.props
---
<style define:vars={{
    colorsEvening: colors.evening,
    colorsWhite: colors.white,
    sizes05: sizes[0.5],
    sizes1: sizes[1],
    sizes5: sizes[5],
    sizes375: sizes[37.5],
    sizes45: sizes[45],
    headerSize: HEADER_SIZE,
    contentPadding: CONTENT_PADDING,
    }}>
    .container {
        background-color: var(--colorsEvening);
        grid-column: 1 / -1;
        padding-top: var(--headerSize);
        @media (min-width: 1200px) {
            height: var(--sizes45);
        }
    }

    .content {
        background-color: var(--colorsWhite);
        @media (min-width: 1200px) {
            display: flex;
            flex-direction: row;
            height: 100%;
            justify-content: flex-end;
            margin: auto;
        }
    }
    
    .content .title-container,
    .content .image-container {
        @media (min-width: 1200px) {
            width: 50%;
        }
    }

    .title-container {
        background-color: var(--colorsWhite);
        padding-bottom: var(--sizes1);
        padding-left: var(--contentPadding);
        padding-right: var(--contentPadding);
        padding-top: var(--sizes1);
        @media (min-width: 1200px) {
            display: flex;
            flex-direction: column;
            justify-content: center;
            max-width: var(--sizes375);
            padding-bottom: 0;
            padding-left: var(--sizes05);
            padding-right: var(--sizes5);
            padding-top: 0;
        }
    }
</style>
<div class="container">
    <div class="content">
        <div class="title-container">
            <h1 style={{ ...typographics.h1 }}>{title}</h1>
        </div>
        <div class="image-container" style={{ display: 'flex', overflow: 'hidden', position: 'relative', aspectRatio: '7 / 6' }}>
            {heroImage?.fields?.file?.url && (<Picture
                src={`https:${heroImage.fields.file.url}`}
                layout="constrained"
                sizes="(max-width: 1200px) 100vw, 50vw"
                widths={[360, 576, 768, 992, 1200, 1280, 2560]}
                fit="cover"
                formats={['avif', 'webp']}
                alt={heroImage.fields.description}
                width="768"
                height="588"
                style={{ top: 0, left: 0, position: 'absolute', width: '100%', height: '100%', objectFit: 'cover' }}
                priority
            />)}
        </div>
    </div>
</div>
